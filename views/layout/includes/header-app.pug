header.bg-indigo-600.p-4
    .container.mx-auto.flex.justify-between
        a(href="/")
            h1.text-2xl.text-white.font-extrabold.text-center Bienes
                span.font-normal Raices

        nav(class="my-5 text-sm md:flex md:items-center md:gap-3 font bold text-white hidden" )
            a(href="/auth/registro") Crear Cuenta
            a(href="/auth/login") Iniciar Sesión

div(class="bg-indigo-700 py-5 hidden lg:block")
    div(class="container mx-auto flex justify-between text-white")
        nav(class="flex gap-4 items-center")
            a(href="/categorias/1") Casas 
            a(href="/categorias/2") Apartamentos
            a(href="/categorias/3") Bodegas
            a(href="/categorias/4") Terrenos
            a(href="/categorias/5") Cabañas

        form(action="/buscador" method="POST" class="flex gap-3 items-center")
            input(type="hidden" name="_csrf" value=csrfToken)
            label(for="termino" class="text-sm uppercase font-bold text-white") Busqueda 
            input(type="text" id="termino" name="termino" placeholder="Buscar Propiedades" class="p-2 rounded-lg shadow text-sm text-indigo-800")

            input(type="submit", class="bg-indigo-800 hover:bg-indigo-400 rounded-lg text-white uppercase font-bold p-2 cursor-pointer text-sm" value="buscar")